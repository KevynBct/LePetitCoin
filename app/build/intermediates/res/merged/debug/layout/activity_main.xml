<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevyn.projet.MainActivity">


    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:text="GPS"
        android:id="@+id/mapButton"
        android:onClick="mapButtonClick"
        android:background="@drawable/gps2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/mapButton"
        android:layout_marginEnd="236dp"
        android:layout_above="@+id/resultList" />

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/searchButton"
        android:background="@drawable/loupe"
        android:layout_alignBottom="@+id/searchBar"
        android:layout_alignParentEnd="true"
        android:onClick="searchButtonClick"/>

    <EditText
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:id="@+id/searchBar"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/searchButton"
        android:hint="Adresse" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultList"
        android:layout_below="@+id/searchBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
